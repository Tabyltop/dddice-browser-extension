{
  "name": "dddice",
  "description": "Roll 3D digital dice using your favorite browser-based VTT.",
  "manifest_version": 2,
  "version": "0.5.4",
  "browser_action": {
    "default_title": "dddice",
    "default_popup": "../index.html",
    "default_icon": {
      "16": "../assets/dddice-16x16.png",
      "32": "../assets/dddice-32x32.png"
    }
  },
  "icons": {
    "16": "../assets/dddice-16x16.png",
    "32": "../assets/dddice-32x32.png",
    "48": "../assets/dddice-48x48.png",
    "128": "../assets/dddice-128x128.png"
  },
  "background": {
    "scripts": ["../background.tsx"],
    "persistent": false
  },
  "content_scripts": [
    {
      "js": [
        "../dndbeyond.tsx"
      ],
      "css": [
        "../dndbeyond.css"
      ],
      "matches": [
        "*://*.dndbeyond.com/*"
      ],
      "run_at": "document_idle"
    },
    {
      "js": [
        "../roll20.tsx"
      ],
      "css": [
        "../roll20.css"
      ],
      "matches": [
        "*://*.roll20.net/editor/"
      ],
      "run_at": "document_idle"
    },
    {
      "js": [
        "../dungeonmastersvault.ts"
      ],
      "css": [
        "../dungeonmastersvault.css"
      ],
      "matches": [
        "*://www.dungeonmastersvault.com/pages/dnd/5e/*"
      ],
      "run_at": "document_idle"
    },
    {
      "js": [
        "../pathbuilder2e.tsx"
      ],
      "css": [
        "../pathbuilder2e.css"
      ],
      "matches": [
        "*://*.pathbuilder2e.com/*"
      ],
      "run_at": "document_idle"
    },
    {
      "js": [
        "../tabyltop.tsx"
      ],
      "matches": [
        "*://*.tabyltop.com/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "https://cdn.dddice.com/*",
    "https://dddice.com/*"
  ],
  "web_accessible_resources": [
    "../dndbeyond.css",
    "../assets/dddice-32x32.png",
    "../roll20.css",
    "../assets/dddice-48x48.png",
    "../dungeonmastersvault.css",
    "../pathbuilder2e.css"
  ]
}
